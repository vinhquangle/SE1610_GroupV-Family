<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetController</servlet-name>
        <servlet-class>controller.load.GetController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadController</servlet-name>
        <servlet-class>controller.load.LoadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBookController</servlet-name>
        <servlet-class>controller.search.SearchBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookCartController</servlet-name>
        <servlet-class>controller.add.AddBookCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBookCartController</servlet-name>
        <servlet-class>controller.modify.EditBookCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveBookCartController</servlet-name>
        <servlet-class>controller.delete.RemoveBookCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.login.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.login.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleController</servlet-name>
        <servlet-class>controller.login.LoginGoogleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.login.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterPublisherController</servlet-name>
        <servlet-class>controller.search.FilterPublisherController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterCategoryController</servlet-name>
        <servlet-class>controller.search.FilterCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterPriceController</servlet-name>
        <servlet-class>controller.search.FilterPriceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetController</servlet-name>
        <url-pattern>/GetController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadController</servlet-name>
        <url-pattern>/LoadController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBookController</servlet-name>
        <url-pattern>/SearchBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookCartController</servlet-name>
        <url-pattern>/AddBookCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBookCartController</servlet-name>
        <url-pattern>/EditBookCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveBookCartController</servlet-name>
        <url-pattern>/RemoveBookCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleController</servlet-name>
        <url-pattern>/LoginGoogleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterPublisherController</servlet-name>
        <url-pattern>/FilterPublisherController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterCategoryController</servlet-name>
        <url-pattern>/FilterCategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterPriceController</servlet-name>
        <url-pattern>/FilterPriceController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>GetController</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>NOT FOUND!!!</exception-type>
        <location>/WEB-INF/JSP/HomePage/error.jsp</location>
    </error-page>
</web-app>
